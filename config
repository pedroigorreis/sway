set $mod Mod4
set $term alacritty
set $menu wofi -S run -p Comandos -I -m -t alacritty -b -M fuzzy -i -L 8 -G
set $dmenu wofi -S drun -p Aplicações -I -m -t alacritty -b -M fuzzy -i -L 8 -G

font Fira Code Semibold 10

output * bg ~/.backgrounds/wp.jpg fill

bar
{
	gaps 5
	position top
	status_command i3status -c ~/.config/sway/i3status.conf

	colors
	{
		background #2f343f
		statusline #f5f6f8
		separator #f5f6f8

		focused_workspace #5294e2 #5294e2 #f5f6f8
		active_workspace #5294e2 #5294e2 #f5f6f8
		inactive_workspace #353944 #353944 #fcf6f8
		urgent_workspace #7e2424 #7e2424 #fcf6f8
		binding_mode #eeeff1 #eeeff1 #eeeff1
	}
}

bindsym $mod+q kill
bindsym $mod+d exec $menu
bindsym $mod+Shift+d exec $dmenu
bindsym $mod+Shift+r reload
bindsym $mod+t split toggle
bindsym $mod+F11 fullscreen
bindsym $mod+Return exec $term
bindsym $mod+Shift+q exec swaymsg exit

bindsym $mod+f floating toggle
bindsym $mod+space focus mode_toggle

floating_modifier Mod1 normal

bindsym $mod+Up focus up
bindsym $mod+Down focus down
bindsym $mod+Left focus left
bindsym $mod+Right focus right

bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Right move right

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5

input *
{
	xkb_layout "br"
	xkb_numlock enable
}

input type:touchpad
{
	tap enabled
	natural_scroll enabled
}

gaps inner 5
gaps outer 5

default_border pixel 0
default_floating_border pixel 0

exec --no-startup-id dunst
exec --no-startup-id xsettingsd
exec --no-startup-id wlsunset -s 18:00 -S 08:00
exec --no-startup-id /usr/libexec/xdg-desktop-portal-wlr
exec --no-startup-id /usr/libexec/xdg-desktop-portal-gtk
exec --no-startup-id /usr/libexec/polkit-gnome-authentication-agent-1

seat seat0 xcursor_theme Breeze_Snow 16

# Screenshoots
bindsym --release Print exec grim $HOME/completa-$(date "+%S").png
bindsym --release Shift+Print exec slurp | grim -g - $HOME/recorte-$(date "+%S").png

# XF86 keyboard symbols
bindsym XF86Search exec $menu
bindsym XF86Tools exec pavucontrol
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86HomePage exec alacritty -e ranger
bindsym XF86AudioPlay exec playerctl play-pause
bindsym Xf86Mail exec xdg-open https://protonmail.com
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86MonBrightnessDown exec light -U 5
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

exec swayidle -w timeout 300 'swaylock -f -i ~/.backgrounds/wp.jpg' timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' before-sleep 'swaylock -f -i ~/.backgrounds/wp.jpg'
