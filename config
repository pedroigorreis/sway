set $ws1 "www"
set $ws2 "ter"
set $ws3 "dev"
set $ws4 "exp"
set $ws5 "msc"
set $ws6 "fun"
set $ws7 "doc"
set $mod Mod4
set $term foot
set $background ~/Imagens/.backgrounds/wp.jpg
set $menu wofi -S run -p Comandos -I -m -t foot -b -M fuzzy -i -L 8 -G
set $dmenu wofi -S drun -p Aplicações -I -m -t foot -b -M fuzzy -i -L 8 -G

font Fira Code Semibold 10

output * bg $background fill

bar
{
	gaps 5
	position top
	status_command i3status -c ~/.config/sway/i3status.conf

	colors
	{
		background #2f343f
		statusline #f5f6f8
		separator #f5f6f8

		focused_workspace #5294e2 #5294e2 #f5f6f8
		active_workspace #5294e2 #5294e2 #f5f6f8
		inactive_workspace #353944 #353944 #fcf6f8
		urgent_workspace #8e2424 #7e2424 #fcf6f8
		binding_mode #eeeff1 #eeeff1 #eeeff1
	}
}

bindsym $mod+q kill
bindsym $mod+d exec $menu
bindsym $mod+Shift+d exec $dmenu
bindsym $mod+Shift+r reload
bindsym $mod+t split toggle
bindsym $mod+F11 fullscreen
bindsym $mod+Return exec $term
bindsym $mod+Shift+q exec swaymsg exit

bindsym $mod+f floating toggle
bindsym $mod+space focus mode_toggle

floating_modifier Mod1 normal

bindsym $mod+Up focus up
bindsym $mod+Down focus down
bindsym $mod+Left focus left
bindsym $mod+Right focus right

bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Right move right

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7

input *
{
	xkb_layout "br"
	xkb_numlock enable
}

input type:touchpad
{
	tap enabled
	natural_scroll enabled
}

gaps inner 5
gaps outer 5

default_border pixel 2
default_floating_border pixel 2

exec --no-startup-id dunst
exec --no-startup-id wlsunset -s 18:00 -S 08:00
exec --no-startup-id /usr/libexec/xdg-desktop-portal-wlr
exec --no-startup-id /usr/libexec/xdg-desktop-portal-gtk
exec --no-startup-id /usr/libexec/polkit-gnome-authentication-agent-1

seat seat0 xcursor_theme Breeze_Snow 16

# Screenshoots
bindsym --release Print exec grim $HOME/completa-$(date "+%S").png
bindsym --release Shift+Print exec slurp | grim -g - $HOME/recorte-$(date "+%S").png

# XF86 keyboard symbols
bindsym XF86Search exec $menu
bindsym XF86Tools exec pavucontrol
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86HomePage exec alacritty -e ranger
bindsym XF86AudioPlay exec playerctl play-pause
bindsym Xf86Mail exec xdg-open https://protonmail.com
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86MonBrightnessDown exec light -U 5
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

exec swayidle -w timeout 300 'swaylock -f -i ~/.backgrounds/wp.png' timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' before-sleep 'swaylock -f -i ~/.backgrounds/wp.png'

for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [app_id="firefox" title="Sobre o Mozilla Firefox"] floating enable
for_window [app_id="firefox" title="Firefox - Indicador de compartilhamento"] floating enable

# Web navigation
assign [app_id="firefox"] → $ws1
assign [app_id"brave-browser"] → $ws1

# Terminal
assign [app_id="foot"] → $ws2

# Development Tools
assign [app_id="gitg"] → $ws3
assign [class="MQTTX"] → $ws3
assign [app_id="geany"] → $ws3
assign [class="processing-app-Base"] → $ws3

# File explorer
assign [app_id="pcmanfm"] → $ws4

# Music / Audio
assign [app_id="pavucontrol"] → $ws5

# Fun / Relax
assign [app_id="mpv"] → $ws6

# Documents
assign [app_id="zathura"] → $ws7


